<h1>Listing order_lines</h1>

<table>
  <tr>
    <th>Order</th>
    <th>Product</th>
    <th>Quantity</th>
    <th>Price</th>
    <th>Row number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @order_lines.each do |order_line| %>
  <tr>
    <td><%= order_line.order_id %></td>
    <td><%= order_line.product_id %></td>
    <td><%= order_line.quantity %></td>
    <td><%= order_line.price %></td>
    <td><%= order_line.row_number %></td>
    <td><%= link_to 'Show', order_line %></td>
    <td><%= link_to 'Edit', edit_order_line_path(order_line) %></td>
    <td><%= link_to 'Destroy', order_line, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

