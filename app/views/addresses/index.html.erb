<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>Zipcode</th>
    <th>Country</th>
    <th>Phone</th>
    <th>State name</th>
    <th>Archived</th>
    <th>Archived at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.firstname %></td>
    <td><%= address.lastname %></td>
    <td><%= address.address1 %></td>
    <td><%= address.address2 %></td>
    <td><%= address.city %></td>
    <td><%= address.zipcode %></td>
    <td><%= address.country.name %></td>
    <td><%= address.phone %></td>
    <td><%= address.state %></td>
    <td><%= address.archived %></td>
    <td><%= address.archived_at %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

